<% include ../partials/header %>
<div class="container">
  <header class="jumbotron bg-transparent">
    <h1 class="display-4">Hello, <%= currentUser ? currentUser.username : 'travellers' %>!</h1>
    <p class="lead">Here you can see some awesome campgrounds or even add your favorite places and share them with others.</p>
    <hr class="my-3">
    <p>Go ahead and show us your favorite campground.</p>
    <a class="btn btn-outline-primary btn-bg" href="/camps/new" role="button">Create new camp</a>
  </header>
    <div class="row">
        <% camps.forEach((camp) => { %>
          <div class="card col-sm-6 col-lg-4 mb-4">
            <img src="<%= camp.imageURL %>" class="card-img-top" alt="Camp card image">
            <div class="card-body">
              <h5 class="card-title mb-2"><%= camp.name %></h5>
              <p class="card-text"><%= camp.description.substring(0, 75)%>...</p>
            </div>
            <div class="card-footer">
                <a class="btn btn-info btn-sm" href="/camps/<%= camp._id %>" role="button">More Info</a>
               <small class="text-muted">Last updated 3 mins ago</small>
            </div>
          </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>
